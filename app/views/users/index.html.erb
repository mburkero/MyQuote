<p style="color: green"><%= notice %></p>

<h1>Manage Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <!-- Gets first name, last name, email and status of all users and organises it -->
    <div class="user card mb-4">
      <div class="card-body">
        <p class="card-text"><span style="font-weight: 600;">First Name</span> <%= user.fname %></p>
        <p class="card-text"><span style="font-weight: 600;">Last Name</span> <%= user.lname %></p>
        <p class="card-text"><span style="font-weight: 600;">Email</span> <%= user.email %></p>
        <p class="card-text"><span style="font-weight: 600;">Status</span> <%= user.status %></p>
        <a href="<%= user_path(user) %>" class="btn btn-primary">Manage User</a>
      </div>
    </div>
    <!--
    <p>
      <%= link_to "Show this user", user %>
    </p>
    -->
  <% end %>
</div>

