<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <!-- sign up sheet -->
  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :fname, placeholder: 'First Name', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :lname, placeholder: 'Last Name', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.text_field :email, placeholder: 'Email Address', class: 'form-control' %>
  </div>

  <!-- users are secured using has_secure_password, this password will be salted and hashed -->
  <div class="form-group" style="padding-bottom: 10px;">
    <%= form.password_field :password, placeholder: 'Choose a strong password', class: 'form-control' %>
  </div>


  <div>
  <!--
    <%= form.label :isAdmin, style: "display: block" %>
    <%= form.check_box :isAdmin %> -->
    <%= form.hidden_field :isAdmin, value: false %>
  </div>

  <div>
  <!--
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %> -->
    <%= form.hidden_field :status, value: "Active" %>
  </div>

  <div>
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
